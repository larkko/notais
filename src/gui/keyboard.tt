
template<typename F>
void Keyboard::for_each(F function, Key::Type type)
{
    for(int key = 0; key < int(key_count()); ++key)
    {
        Key current_key = {key, Key::Type::Raw};
        int index = (type == Key::Type::Raw)
                  ? key
                  : offset_index(current_key);
        function(m_keys[key], index);
    }
}
